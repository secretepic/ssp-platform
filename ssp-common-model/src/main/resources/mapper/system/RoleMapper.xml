<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boyu.mapper.system.RoleMapper">
    <select id="selectPermsByRoleId" resultType="java.lang.String">
        select perm_code
        from sys_menu
        where menu_id in (select menu_id from sys_menu_role where role_id = #{roleId}) t
    </select>
</mapper>